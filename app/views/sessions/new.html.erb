<div class="content">
  <div class="page-header">
    <% provide(:title, "Log in") %> <h1>Administration Log in</h1>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %> <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %> <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %> <%= f.submit "Log in", class: "btn btn-primary center-block", id: "log_in_btn" %>
      <% end %>

      <!--<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>-->
    </div>
  </div>
</div>