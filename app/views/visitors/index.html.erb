//      $('#alert_warning').hide();

        if ( $.fn.dataTable.isDataTable( '#visitors_table' ) ) {
            table = $('#visitors_table').DataTable({
              destroy: true,
              dom: 'T<"clear">lfrtip',
              tableTools: {
