        <%= f.number_field :group_id %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :contact %><br>
        <%= f.check_box :contact %>
      </div>
      <div class="field">
        <%= f.label :zip_code %><br>
        <%= f.text_field :zip_code %>
      </div>
      <div class="field">
        <%= f.label :country_id %><br>
        <%= f.collection_select :country_id, Country.all, :id, :name, {:selected => '215'} %>
      </div>
