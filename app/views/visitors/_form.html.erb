<div class="content">
    <%= form_for @visitor, :html=> {:id => 'form1'} do |f| %>
      <% if @visitor.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@visitor.errors.count, "error") %> prohibited this visitor from being saved:</h2>

          <ul>
          <% @visitor.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name %>
      </div>
      <div class="field">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name %>
      </div>
      <div class="field hidden">
        <%= f.label :group_id %><br>
        <%= f.number_field :group_id %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :contact %><br>
        <%= f.check_box :contact %>
      </div>
      <div class="field">
        <%= f.label :zip_code %><br>
        <%= f.text_field :zip_code %>
      </div>
      <div class="field">
        <%= f.label :country_id %><br>
        <%= f.collection_select :country_id, Country.all, :id, :name, {:selected => '215'} %>
      </div>
      <!--<div class="actions">-->
        <!--<%= f.submit %>-->
      <!--</div>-->
    <% end %>

  <%= form_for @group, :html=> {:id => 'form2'} do |g| %>
      <% if @group.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

            <ul>
              <% @group.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= g.label :group_size %><br>
        <%= g.number_field :group_size %>
      </div>
      <div class="field hidden">
        <%= g.label :visit_date %><br>
        <%= g.datetime_select :visit_date %>
      </div>
      <!--<div class="actions">-->
        <!--<%= g.submit %>-->
      <!--</div>-->
  <% end %>
  <%= link_to "Submit", "#", :class => 'button_submit' %>

</div>


